CREATE DATABASE IF NOT EXISTS <%= node['storage']['$UUID']['schema'] %>;

GRANT ALL 
	ON  <%= node['storage']['$UUID']['schema'] %>.* 
	TO '<%= node['storage']['$UUID']['dbuser']   %>'@'localhost' 
	IDENTIFIED BY '<%= node['storage']['$UUID']['dbpassword'] %>';

GRANT ALL 
	ON  <%= node['storage']['$UUID']['schema'] %>.* 
	TO '<%= node['storage']['$UUID']['dbuser']   %>'@'%' 
	IDENTIFIED BY '<%= node['storage']['$UUID']['dbpassword'] %>';
